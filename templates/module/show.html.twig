{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% set userFocus = app.request.get('userFocus') %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ module.name }}</td>
            </tr>
            <tr>
                <th>InfluxId</th>
                <td>{{ module.influxId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('module_index', {userFocus: userFocus}) }}">back to list</a>

    <a href="{{ path('module_edit', {'id': module.id, userFocus: userFocus}) }}">edit</a>

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
