{% extends 'base.html.twig' %}

{% block title %}Module index{% endblock %}

{% set userFocus = app.request.get('userFocus') %}

{% block body %}
    <h1>Module index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>InfluxId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for module in modules %}
            <tr>
                <td>{{ module.id }}</td>
                <td>{{ module.name }}</td>
                <td>{{ module.influxId }}</td>
                <td>
                    <a href="{{ path('module_show', {'id': module.id, userFocus: userFocus}) }}">show</a>
                    <a href="{{ path('module_edit', {'id': module.id, userFocus: userFocus}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('module_new', { userFocus: userFocus}) }}">Create new</a>
{% endblock %}
